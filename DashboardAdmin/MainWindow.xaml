<Window x:Class="DashboardAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashboardAdmin"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="700" 
        Width="980"
        Background="#242424"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="MainWindow_MouseDown">
    <Grid x:Name="MainWindowPanel"
             Background="Transparent"
             MouseDown="MainWindowPanel_MouseDown">
        
        <Border Background="#242424"
                      Panel.ZIndex="0"/>

        <local:MainMenu x:Name="MainMenu_UC"/>

        <Border x:Name="WindowEdge" 
                     HorizontalAlignment="Stretch"
                     BorderBrush="White"
                     BorderThickness="0 4 0 4"
                     Panel.ZIndex="1"/>

    </Grid>
</Window>
